<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.icapa.madridguide.activities.MainActivity">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/main_activity_logo_width"
        android:layout_height="@dimen/main_activity_logo_height"
        android:src="@drawable/madrid_guide"
        />
    <Button
        android:enabled="false"
        android:id="@+id/activity_main_shops_button"
        android:text="@string/view_shops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:enabled="false"
        android:id="@+id/activity_main_activitites_button"
        android:text="@string/view_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
