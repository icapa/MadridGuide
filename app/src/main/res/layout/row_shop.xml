<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/row_shop_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        tools:text="La mejor tienda de Madrid "
        />

    <ImageView
        android:id="@+id/row_shop_logo"
        android:layout_width="@dimen/logo_dimension_width"
        android:layout_height="@dimen/logo_dimension_height"
        android:layout_centerVertical="true"
        tools:src="@android:drawable/btn_plus"
        />
</RelativeLayout>