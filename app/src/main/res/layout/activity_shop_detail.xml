<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
<LinearLayout


    android:id="@+id/activity_shop_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.icapa.madridguide.activities.ShopDetailActivity">
    <ImageView
        tools:src="@drawable/madrid_guide"
        android:scaleType="fitXY"
        android:id="@+id/activity_shop_detail_shop_logo_image"
        android:layout_width="@dimen/shop_detail_logo_width"
        android:layout_gravity="center"
        android:layout_height="@dimen/shop_detail_logo_height"/>
    <TextView
        android:id="@+id/activity_shop_detail_shop_name_text"
        android:gravity="center"
        tools:text="Nombre de la tienda"
        android:layout_width="match_parent"
        android:textSize="@dimen/shop_detail_name_text_size"
        android:layout_height="@dimen/shop_detail_name_height"/>
    <TextView
        android:id="@+id/activity_shop_detail_description"
        android:layout_width="match_parent"
        tools:text="descripcion de la tienda..etc..etc..."
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/activity_shop_detail_address"
        android:layout_gravity="center"
        tools:text="direccion de la tienda"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/activity_shop_detail_map"
        android:layout_gravity="center"
        android:layout_width="@dimen/shop_detail_map_width"
        tools:src="@drawable/madrid_guide"
        android:layout_height="@dimen/shop_detail_map_height"/>
</LinearLayout>
</ScrollView>